{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serve Angular & Launch Chrome",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": [
        "serve"
      ],
      "problemMatcher": "$tsc",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
