{
  "name": "next-flacselecter",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "npm run build && concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && electron-builder",
    "electron:local": "npm run build && cross-env ELECTRON=true electron .",
    "electron:linux": "npm run build && electron-builder build --linux",
    "electron:windows": "npm run build && electron-builder build --windows",
    "electron:mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "next": "15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.83.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1",
    "electron-reload": "^1.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.structuralengine.flacselecter",
    "productName": "FLACSelecter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      ".next/**/*",
      "public/**/*"
    ],
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    },
    "mac": {
      "target": ["dmg"]
    }
  }
}
